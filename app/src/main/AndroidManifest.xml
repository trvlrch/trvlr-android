<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.trvlr.trvlr">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_public_chat"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme"
            android:exported="true" />
        <activity android:name=".FindConnectionActivity"></activity>
        <activity android:name=".ListPrivateChatsActivity"></activity>
        <activity android:name=".ListPublicChatMembersActivity"></activity>
    </application>
</manifest>
